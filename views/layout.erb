<html>
  <head>
    <title>VisualizeIt</title>
    <link rel="stylesheet" href="/stylesheets/normalize.css">
    <link rel="stylesheet" href="/stylesheets/skeleton.css">
    <link href='http://fonts.googleapis.com/css?family=Lato:100' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="/stylesheets/main.css">

    <script type="text/javascript" src="/scripts/lib/jquery.js"></script>
    <script type="text/javascript" src="/scripts/lib/underscore.js"></script>
    <script type="text/javascript" src="/scripts/lib/backbone.js"></script>
    <script type="text/javascript" src="/scripts/lib/d3-min.js"></script>
    <script type="text/javascript" src="/scripts/lib/d3.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
  </head>
  <body>
    <nav class="row navbar container u-full-width">
      <div class="one-half column">
        <% if current_user %>
        <h1 class="brand-logo"><p class="logo">Visualize</p><p class="logo" id="it">It</p></h1>
        <% else %>
        <h1 class="brand-logo"><p class="logo">Visualize</p><p class="logo" id="it">It</p></h1>
        <p class="question seven columns">Log In/Sign up for more cool views!</p>
        <% end %>
      </div>

      <div class="row one-half column mainNav">
        <% if current_user %>
        <div class="usernav u-full-width">
          <%= erb :partials %>
        </div>
        <% else %>
          <div class="u-full-width" id="guestbtn">
              <button class="four columns navbutton" type="submit" id="signin">Log In </button>
              <button class="four columns navbutton" type="submit" id="signup">Sign Up</button>
          </div>
          <div class="u-full-width" id= "login_form">
            <%= erb :login%>
          </div>
          <div class="u-full-width" id="signup_form">
            <%= erb :new_user%>
          </div>
        <% end %>
      </div>
    </nav>

    <div class="container">

		</div>

  </body>

</html>
